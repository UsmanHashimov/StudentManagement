@{
}

@model List<StudentManagement.Web.Models.Entities.Student>

<h1>Students</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var student in Model)
        {
            <tr>
                <th>@student.Id</th>
                <th>@student.Name</th>
                <th>@student.Email</th>
                <th>@student.Phone</th>
                <th>
                    <a class="btn btn-primary" asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                </th>
            </tr>
        }
    </tbody>
</table>
